{
  "title": {"description": "图片标题", "type": "string", "default": "系统状态"},
  "background_mode": {"description": "背景类型", "type": "string", "options": ["none", "url", "file"], "default": "none"},
  "background_url": {"description": "背景图片 URL", "type": "string", "default": ""},
  "background_file": {"description": "背景图片本地路径", "type": "string", "default": ""},
  "text_color": {"description": "文字颜色", "type": "string", "default": "#ffffff"},
  "accent_color": {"description": "强调色/进度条颜色", "type": "string", "default": "#6366f1"},
  "theme": {"description": "主题模板", "type": "string", "options": ["custom_dashboard", "dark_glass", "light_card", "neon"], "default": "custom_dashboard"},
  "background_fit": {"description": "背景填充模式", "type": "string", "options": ["cover", "contain", "fill"], "default": "cover"},
  "enable_session_config": {"description": "允许会话级配置覆盖", "type": "bool", "default": false},
  "auto_background": {"description": "自动启用背景（当填 URL/文件）", "type": "bool", "default": true},
  "width": {"description": "截图宽度", "type": "int", "default": 720},
  "height": {"description": "截图高度", "type": "int", "default": 1280},
  "show_cpu": {"description": "显示 CPU", "type": "bool", "default": true},
  "show_memory": {"description": "显示内存", "type": "bool", "default": true},
  "show_disk": {"description": "显示磁盘", "type": "bool", "default": true},
  "disk_partitions": {"description": "要显示的分区挂载点列表", "type": "list", "items": {"type": "string"}, "default": []},
  "show_hostname": {"description": "显示主机名", "type": "bool", "default": true},
  "show_time": {"description": "显示当前时间", "type": "bool", "default": true},
  "locale": {"description": "语言", "type": "string", "options": ["zh", "en"], "default": "zh"},
  "force_show_empty_disk": {"description": "无分区时仍显示磁盘卡片", "type": "bool", "default": true},
  "show_network": {"description": "显示网络速率", "type": "bool", "default": true},
  "network_interfaces": {"description": "网络接口过滤", "type": "list", "items": {"type": "string"}, "default": []},
  "show_swap": {"description": "显示交换内存", "type": "bool", "default": true},
  "show_top_processes": {"description": "显示进程榜单", "type": "bool", "default": true},
  "top_n": {"description": "进程榜单数量", "type": "int", "default": 10},
  "show_os": {"description": "显示系统信息", "type": "bool", "default": true},
  "show_uptime": {"description": "显示开机时长", "type": "bool", "default": true},
  "show_disk_total": {"description": "显示磁盘总览", "type": "bool", "default": true},
  "show_network_per_iface": {"description": "逐项显示各网卡速率", "type": "bool", "default": false},
  "footer_position": {"description": "页脚位置", "type": "string", "options": ["left_bottom", "right_bottom"], "default": "left_bottom"},
  "bar_color_cpu": {"description": "CPU条颜色", "type": "string", "default": "#6366f1"},
  "bar_color_mem": {"description": "内存条颜色", "type": "string", "default": "#6366f1"},
  "bar_color_swap": {"description": "交换条颜色", "type": "string", "default": "#6366f1"},
  "bar_color_net": {"description": "网络条颜色", "type": "string", "default": "#6366f1"},
  "bar_color_disk": {"description": "磁盘条颜色", "type": "string", "default": "#6366f1"},
  "bottom_right_panel": {"description": "底部右侧面板", "type": "string", "options": ["none","net_ifaces","processes","summary"], "default": "processes"},
  "process_sort_key": {"description": "进程排序依据", "type": "string", "options": ["memory", "cpu"], "default": "cpu"},
  "process_show_user": {"description": "显示进程用户", "type": "bool", "default": true},
  "sysinfo_auto_help": {"description": "定时发送说明", "type": "string", "default": "请在群聊中使用 /sysinfo_auto <分钟> 开启定时发送，数据会自动保存。"}
}